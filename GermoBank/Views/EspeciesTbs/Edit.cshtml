@model GermoBank.Models.EspeciesTb

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/titulos.css" />
<div style="margin-left:250px; margin-top:50px;">
    <header>ESPECIES</header>
    <br />

    <h3>Editar</h3>
    <hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEspeciePk" />
            <div class="form-group">
                <label asp-for="NombreEspecie" class="control-label">Nombre de especie</label>
                <input asp-for="NombreEspecie" class="form-control" />
                <span asp-validation-for="NombreEspecie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdGeneroFk" class="control-label"> Codigo de género</label>
                <select asp-for="IdGeneroFk" class="form-control" asp-items="ViewBag.IdGeneroFk"></select>
                <span asp-validation-for="IdGeneroFk" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-outline-success" />
                    <a asp-action="Index" class="btn btn btn-outline-secondary">Volver a lista</a>

            </div>
        </form>
    </div>
</div>

</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}