@model GermoBank.Models.EspeciesTb

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/titulos.css" />
<div style="margin-left:250px; margin-top:50px;">
    <header>ESPECIES</header>
    <br />
    <h3>Crear</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreEspecie" class="control-label"> Nombre de la especie</label>
                <input asp-for="NombreEspecie" class="form-control" />
                <span asp-validation-for="NombreEspecie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdGeneroFk" class="control-label">Código del género</label>
                <select asp-for="IdGeneroFk" class ="form-control" asp-items="ViewBag.IdGeneroFk"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-success" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver a lista</a>

            </div>
        </form>
    </div>
</div>


</div>

