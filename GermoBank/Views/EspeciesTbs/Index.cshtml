@model IEnumerable<GermoBank.Models.EspeciesTb>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/titulos.css" />

<div style="margin-left:250px; margin-top:50px;">
    <header>Especies</header>
    <br />
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
        <tr>
           <th class="col--2 text-center">
                           Especie
                        </th>
                <th class="col--2 text-center">
                    Genero
                </th>
                        <th class="col-2 text-center">
                            Acciones
                        </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="col-2 text-center">
                @Html.DisplayFor(modelItem => item.NombreEspecie)
            </td>
                    <td class="col-2 text-center">
                @Html.DisplayFor(modelItem => item.IdGeneroFkNavigation.NombreGenero)
            </td>
                    <td class="col-2 text-center">
                <a class="btn btn-primary " asp-action="Edit" asp-route-id="@item.IdEspeciePk"><i class="fa fa-edit"></i></a> |
                        <a class="btn btn-secondary " asp-action="Details" asp-route-id="@item.IdEspeciePk"><i class="fa fa-info"></i></a> |
                        <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.IdEspeciePk"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>

    <p>
        <a asp-action="Create" class="btn btn-outline-success">Crear nuevo</a>
    </p>
</div>

