@model GermoBank.Models.SubespeciesTb

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/titulos.css" />
<div style="margin-left:250px; margin-top:50px;">
    <header>Subespecie</header>
    <br />

    <h3>Editar</h3>
    <hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdSubespeciePk" />
            <div class="form-group">
                <label asp-for="NombreSubespecie" class="control-label">Nombre de subespecie</label>
                <input asp-for="NombreSubespecie" class="form-control" />
                <span asp-validation-for="NombreSubespecie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEspecieFk" class="control-label"> Código de especie</label>
                <select asp-for="IdEspecieFk" class="form-control" asp-items="ViewBag.IdEspecieFk"></select>
                <span asp-validation-for="IdEspecieFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-outline-success" />
                    <a asp-action="Index" class="btn btn btn-outline-secondary">Volver a lista</a>

            </div>
        </form>
    </div>
</div>

</div>

