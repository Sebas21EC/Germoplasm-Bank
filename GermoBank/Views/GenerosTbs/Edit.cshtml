@model GermoBank.Models.GenerosTb

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/titulos.css" />
<div style="margin-left:250px; margin-top:50px;">
    <header>Género</header>
    <br />

    <h3>Editar</h3>
    <hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdGeneroPk" />
            <div class="form-group">
                <label asp-for="NombreGenero" class="control-label">Nombre de género</label>
                <input asp-for="NombreGenero" class="form-control" />
                <span asp-validation-for="NombreGenero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdFamiliaFk" class="control-label"> Código de Familia</label>
                <select asp-for="IdFamiliaFk" class="form-control" asp-items="ViewBag.IdFamiliaFk"></select>
                <span asp-validation-for="IdFamiliaFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success" />
                    <a asp-action="Index" class="btn btn btn-outline-secondary">Volver a lista</a>

            </div>
        </form>
    </div>
</div>


</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
