@model GermoBank.Models.GenerosTb

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/titulos.css" />
<div style="margin-left:250px; margin-top:50px;">
    <header>ESPECIES</header>
    <br />
    <h3>Crear</h3>
    <hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreGenero" class="control-label"> Nombre del género</label>
                <input asp-for="NombreGenero" class="form-control" />
                <span asp-validation-for="NombreGenero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdFamiliaFk" class="control-label">Codigo de Familia</label>
                <select asp-for="IdFamiliaFk" class ="form-control" asp-items="ViewBag.IdFamiliaFk"></select>
            </div>
            <br />
            <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-success" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver a lista</a>

            </div>
        </form>
    </div>
</div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
