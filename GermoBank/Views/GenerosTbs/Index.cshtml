@model IEnumerable<GermoBank.Models.GenerosTb>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/titulos.css" />

<div style="margin-left:250px; margin-top:50px;">
    <header>Géneros</header>
    <br />
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
                <th class="col-2 text-center">
                    Nombre de género
            </th>
                <th class="col-2 text-center">
                    Familia
                    </th>
                <th class="col-2 text-center">  Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td class="col-2 text-center">
                        @Html.DisplayFor(modelItem => item.NombreGenero)
                    </td>
                    <td class="col-2 text-center">
                        @Html.DisplayFor(modelItem => item.IdFamiliaFkNavigation.NombreFamilia)
                    </td>
                    <td class="col-2 text-center">
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.IdGeneroPk"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.IdGeneroPk"><i class="fa fa-info"></i></a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IdGeneroPk"><i class="fa fa-trash"></i>    </a>
                    </td>
                </tr>
        }
    </tbody>
</table>
    <p>
        <a asp-action="Create" class="btn btn-outline-success">Crear nuevo</a>
    </p>
</div>