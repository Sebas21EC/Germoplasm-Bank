@model GermoBank.Models.GenerosTb

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/titulos.css" />
<div style="margin-left:250px; margin-top:50px;">
    <header>Género</header>
    <br />

    <h3>Eliminar</h3>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Nombre del género
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreGenero)
        </dd>
        <dt class = "col-sm-2">
          Familia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdFamiliaFkNavigation.NombreFamilia)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdGeneroPk" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
        <a asp-action="Index" class="btn btn-outline-secondary ">Volver a lista</a>
    </form>
</div>
