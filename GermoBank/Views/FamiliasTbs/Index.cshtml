@model IEnumerable<GermoBank.Models.FamiliasTb>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/titulos.css" />

<div style="margin-left:250px; margin-top:50px;">
    <header>FAMILIAS</header>
    <br />


    <div class="container mt-3">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th class="col--2 text-center">
                       Familia
                    </th>
                    <th class="col-2 text-center">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="col-2 text-center">
                            @Html.DisplayFor(modelItem => item.NombreFamilia)
                        </td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a class="btn btn-primary " asp-action="Edit" asp-route-id="@item.IdFamiliaPk"><i class="fa fa-edit"></i></a>
                                <a class="btn btn-secondary " asp-action="Details" asp-route-id="@item.IdFamiliaPk"><i class="fa fa-info"></i></a>
                                <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.IdFamiliaPk"><i class="fa fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>




    </div>
    <div class="btn-group">
        <a asp-action="Create" class="btn btn-outline-success">Crear nueva familia</a>

    </div>

</div>