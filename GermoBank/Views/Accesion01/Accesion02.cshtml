@model GermoBank.Models.ModelsPersonalizados.Accesion02Model;
@{
    ViewData["Title"] = "Accesion02";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/Accesion01.css" />
<link rel="stylesheet" href="~/css/titulos.css" />
<style>
    label.error {
        color: red;
        white-space: nowrap;
    }

    label {
        white-space: nowrap;
    }
</style>

<div >

    <form method="post" action="AgregarAccesion_02" id="myForm" >


        <div class="container">
            <div class="row mt-3">
                <div class="col-md-7">
                    <div class="card border-0">
                        <div class="card-body  align-content-center align-self-center align-items-center">
                            <div class="mt-3">
                                <header id="titulo_xd" >agregar accesión</header>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="card border-0">
                        <div class="card-body">
                            <h5 class="card-title">Propietario</h5>
                            <div class="card border-0">
                                <div class="fields">
                                    <div class="input-field">
                                        <div>
                                            <label for="codigo_propietario">Código propietario: </label>
                                            <input type="text"
                                                   id="codigo_propietario"
                                                   name="codigo_propietario"
                                                   placeholder="Código propietario"
                                                   required />
                                        </div>
                                    </div>
                                </div>
                                <div class="fields">
                                    <div class="input-field">
                                        <div>
                                            <label for="nombre_propietario">Nombre propietario: </label>
                                            <input type="text"
                                                   id="nombre_propietario"
                                                   name="nombre_propietario"
                                                   placeholder="Nombre propietario"
                                                   required />
                                        </div>
                                    </div>
                                </div>
                                <div class="fields">
                                    <div class="input-field">
                                        <div>
                                            <label for="apellido_propietario">
                                                Apellido propietario:
                                            </label>
                                            <input type="text"
                                                   id="apellido_propietario"
                                                   name="apellido_propietario"
                                                   placeholder="Apellido propietario"
                                                   required />
                                        </div>
                                    </div>
                                </div>
                                <div class="fields">
                                    <div class="input-field">
                                        <div>
                                            <label for="telefono_propietario">Teléfono: </label>
                                            <input type="text"
                                                   id="telefono_propietario"
                                                   name="telefono_propietario"
                                                   placeholder="0999999999"
                                                   required />
                                        </div>
                                    </div>
                                </div>
                                <div class="fields">
                                    <div class="input-field">
                                        <div>
                                            <label for="email_propietario">Correo electrónico: </label>
                                            <input type="email"
                                                   id="email_propietario"
                                                   name="email_propietario"
                                                   placeholder="usuario@mail.com" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0">
                        <div class="card-body">
                            <h5 class="card-title">Propiedad</h5>
                            <div class="card border-0">
                                <div class="fields">
                                    <div class="input-field">
                                        <div>
                                            <label for="nombre_propiedad">Nombre de la propiedad: </label>
                                            <input type="text"
                                                   id="nombre_propiedad"
                                                   name="nombre_propiedad"
                                                   placeholder="Nombre de la propietario"
                                                   required />
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="fields">
                            <h5 class="card-title">Suelo</h5>

                                    <div class="input-field">
                                        <div>
                                            <label for="drenaje_suelo"> Drenaje: </label><br />
                                            <input type="checkbox"
                                                   id="drenaje_suelo"
                                                   name="drenaje_suelo"
                                                   class="form-check-input" />
                                        </div>

                                        <div>
                                            <label for="erosion_suelo"> Erosión: </label><br />
                                            <input type="checkbox"
                                                   id="erosion_suelo"
                                                   name="erosion_suelo"
                                                   class="form-check-input" />
                                        </div>

                                        <div>
                                            <label for="pedregosidad_suelo"> Pedregosidad: </label><br />
                                            <input type="checkbox"
                                                   id="pedregosidad_suelo"
                                                   name="pedregosidad_suelo"
                                                   class="form-check-input" />
                                        </div>
                                    </div>
                                </div>
                                <div class="fields">
                                    <div class="input-field">
                                        <div>
                                            <label for="codigo_textura">Textura:</label>
                                            <select id="codigo_textura"
                                                    name="codigo_textura"
                                                    class="form-select form-select-sm">
                                                <option value="">--Seleccione una textura--</option>
                                                @foreach (var textura in Model.texturasSuelosTbs)
                                                {
                                                    <option value="@textura.IdTexturaSueloPk">
                                                        @textura.NombreTexturaSuelo
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="fields">
                                    <div class="input-field">
                                        <div>
                                            <label for="color_suelo">Color del suelo: </label>
                                            <input type="text"
                                                   id="color_suelo"
                                                   name="color_suelo"
                                                   placeholder="Color del suelo" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-8">
                    <div class="card border-0">
                        <div class="card-body  align-content-center align-self-center align-items-center">
                            <div class="mt-3">
                                <input type="submit" value="SIGUIENTE" class="btn btn-outline-success" />

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>



     
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>



                                
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    $(document).ready(function () {
        $('#myForm').validate({
            rules: {
                codigo_propietario: {
                    required: true
                },
                nombre_propietario: {
                    required: true
                },
                apellido_propietario: {
                    required: true
                },
                telefono_propietario: {
                    required: true
                },
                // Agregar validaciones para los campos de texto, número y fecha
                email_propietario: {
                    required: true,
                },

                nombre_propiedad: {
                    required: true,
                },

                codigo_textura: {
                    required: true,
                }
            },
            messages: {
                codigo_propietario: {
                    required: 'Por favor selecciona un identificador'
                },
                nombre_propietario: {
                    required: 'Por favor selecciona un nombre'
                },
                apellido_propietario: {
                    required: 'Por favor selecciona un apellido'
                },
                telefono_propietario: {
                    required: 'Por favor selecciona una teléfono'
                },
                // Agregar mensajes de validación para los campos de texto, número y fecha
                email_propietario: {
                    required: 'Por favor ingresa un correo'
                },

                nombre_propiedad: {
                    required: 'Por favor ingresa una fecha'
                },
                codigo_textura: {
                    required: 'Por favor seleccione una textura'
                }
            }
        });
    });

</script>