@using GermoBank.Models.ModelsPersonalizados;
@model List<AccesionesModel> ;
@{
    ViewData["Title"] = "ListarAccesiones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div style="margin-left: 250px; margin-top: 50px;">

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="bg-info text-light">
                <tr>
                    <th style="background-color: #4B8A08">Código</th>
                    <th style="background-color: #4B8A08">Nombre local</th>
                    <th style="background-color: #4B8A08">Familia</th>
                    <th style="background-color: #4B8A08">Genero</th>
                    <th style="background-color: #4B8A08">Especie</th>
                    <th style="background-color: #4B8A08">Subespecie</th>
                    <th style="background-color: #4B8A08">Estado de Germoplasma</th>
                    <th style="background-color: #4B8A08">→</th> <!-- Columna para los enlaces -->
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="background-color: #D0F5A9; font-weight: bold; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">@item.id_accesion_pk</td>
                        <td style="background-color: #F5ECCE; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">@item.nombre_local_accesion</td>
                        <td style="background-color: #D0F5A9; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">@item.nombre_familia</td>
                        <td style="background-color: #F5ECCE; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">@item.nombre_genero</td>
                        <td style="background-color: #D0F5A9; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">@item.nombre_especie</td>
                        <td style="background-color: #F5ECCE; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">@item.nombre_subespecie</td>
                        <td style="background-color: #D0F5A9; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">@item.nombre_estado_germoplasma</td>
                        <td style="background-color: #F5ECCE; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
                            <a href="@Url.Action("ObtenerAccesion", "Accesion01", new { id = item.id_accesion_pk })">
                                <i class="bi bi-file-earmark-text"></i>
                            </a>  <!-- Enlace para detalles -->
                            <!-- <a href="@Url.Action("Edit", "ControllerName", new { id = item.id_accesion_pk })">Editar</a> | --> <!-- Enlace para editar -->
                            <!-- <a href="@Url.Action("Delete", "ControllerName", new { id = item.id_accesion_pk })">Eliminar</a> --> <!-- Enlace para eliminar -->
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




<script>
    $(document).ready(function () {
        $('#miTabla').DataTable({
            "pagingType": "full_numbers",
            "searching": true
        });
    });
</script>